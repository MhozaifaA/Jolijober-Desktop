                                        <RowDefinition Height="40"></RowDefinition>
                                        <RowDefinition Height="40"></RowDefinition>
                                        <RowDefinition Height="40"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>


                                    </Grid.RowDefinitions>


                                    <Button Grid.Row="0" 
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                materialDesign:ButtonProgressAssist.Value="-1"
                                materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                                materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                                Content="Post FILTERING"
                                />

                                    <TextBlock Grid.Row="1"
                             Foreground="White"      Margin="20 0 0 0" HorizontalAlignment="Left" VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignButtonTextBlock}">
                           Order :
                                    </TextBlock>


                                    <materialDesign:ColorZone Grid.Row="2"
                            Mode="PrimaryMid"  VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <StackPanel
                                Orientation="Horizontal"
                               >
                                            <RadioButton
                                    Style="{StaticResource MaterialDesignTabRadioButton}"
                                    Margin="4"
                                    IsChecked="True"
                                    Content="Ascending" />
                                            <RadioButton
                                    Style="{StaticResource MaterialDesignTabRadioButton}"
                                    Margin="4"
                                    IsChecked="False"
                                    Content="descending "/>

                                        </StackPanel>
                                    </materialDesign:ColorZone>


                                    <TextBlock Grid.Row="3"
                                   Foreground="White"      Margin="20 0 0 0" HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Style="{StaticResource MaterialDesignButtonTextBlock}">
                            Select Search :
                                    </TextBlock>

                                    <Separator Grid.Row="3" VerticalAlignment="Bottom" Margin="10 0 10 0"></Separator>

                                    <ScrollViewer Grid.Row="4" VerticalScrollBarVisibility="Hidden" >
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="60"></RowDefinition>
                                                <RowDefinition Height="60"></RowDefinition>
                                                <RowDefinition Height="60"></RowDefinition>
                                                <RowDefinition Height="60"></RowDefinition>
                                                <RowDefinition Height="60"></RowDefinition>
                                                <RowDefinition Height="60"></RowDefinition>
                                                <RowDefinition Height="60"></RowDefinition>
                                                <RowDefinition Height="100"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <ToggleButton Grid.Column="0" Name="ToggleButtonSpecification"
                                                   Style="{StaticResource MaterialDesignSwitchAccentToggleButton}"
                                                   Margin="10" VerticalAlignment="Center"  Unchecked="ToggleButtonSpecification_OnUnchecked"
                                                   IsChecked="False" HorizontalAlignment="Center" />

                                                <ComboBox  Grid.Column="1"  Name="ComboBoxSpecification" SelectedValuePath="Id" DisplayMemberPath="Name"
                                               materialDesign:HintAssist.Hint="Search Specification"  SelectionChanged="ComboBoxSpecification_OnSelectionChanged"
                                              IsEnabled="{Binding Path=IsChecked, ElementName=ToggleButtonSpecification}" Margin="5 0 10 0" materialDesign:HintAssist.Foreground="White"
                                               materialDesign:HintAssist.HintOpacity=".26" >
                                                </ComboBox>

                                            </Grid>

                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <ToggleButton Grid.Column="0" Name="ToggleButtonArea"
                                          Style="{StaticResource MaterialDesignSwitchAccentToggleButton}"
                                          Margin="10" VerticalAlignment="Center"
                                          IsChecked="False" HorizontalAlignment="Center" />

                                                <ComboBox Grid.Column="1" Name="ComboBoxArea" SelectedValuePath="Id" DisplayMemberPath="Name"
                                      materialDesign:HintAssist.Hint="Search Area"  
                                      IsEnabled="{Binding ElementName=ToggleButtonArea , Path=IsChecked}" Margin="5 0 10 0" materialDesign:HintAssist.Foreground="White"
                                      materialDesign:HintAssist.HintOpacity=".26">
                                                </ComboBox>

                                            </Grid>

                                            <Grid Grid.Row="2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <ToggleButton Grid.Column="0" Name="ToggleButtonCompany"
                                          Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                          Margin="10" VerticalAlignment="Center"
                                          IsChecked="False" HorizontalAlignment="Center" />

                                                <ComboBox Grid.Column="1" Name="ComboBoxCompany" SelectedValuePath="Id" DisplayMemberPath="Name"
                                      materialDesign:HintAssist.Hint="Search Company" 
                                      IsEnabled="{Binding ElementName=ToggleButtonCompany , Path=IsChecked}" Margin="5 0 10 0" materialDesign:HintAssist.Foreground="White"
                                      materialDesign:HintAssist.HintOpacity=".26">
                                                </ComboBox>

                                            </Grid>

                                            <Grid Grid.Row="3">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <ToggleButton Grid.Column="0" Name="ToggleButtonCategory"
                                        Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                  Margin="10" VerticalAlignment="Center"
                                                  IsChecked="False" HorizontalAlignment="Center">
                                                    <materialDesign:PackIcon
                                            Kind="Star"
                                            RenderTransformOrigin=".5,.5">
                                                        <materialDesign:PackIcon.RenderTransform>
                                                            <RotateTransform
                                                    Angle="45" />
                                                        </materialDesign:PackIcon.RenderTransform>
                                                    </materialDesign:PackIcon>
                                                    <materialDesign:ToggleButtonAssist.OnContent>
                                                        <materialDesign:PackIcon
                                                Kind="Star" />
                                                    </materialDesign:ToggleButtonAssist.OnContent>
                                                </ToggleButton>


                                                <ComboBox Grid.Column="1" Name="ComboBoxCatgory" SelectedValuePath="Id" DisplayMemberPath="Name"
                                      materialDesign:HintAssist.Hint="Search Category"
                                      IsEnabled="{Binding ElementName=ToggleButtonCategory , Path=IsChecked}" Margin="5 0 10 0" materialDesign:HintAssist.Foreground="White"
                                      materialDesign:HintAssist.HintOpacity=".26">
                                                </ComboBox>

                                            </Grid>

                                            <Grid Grid.Row="4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <ToggleButton Grid.Column="0"
                                          Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                          Margin="10" VerticalAlignment="Center"
                                          IsChecked="False" HorizontalAlignment="Center" />

                                                <TextBox Grid.Column="1"  
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                   VerticalAlignment="Center" Margin="5 0 10 0" materialDesign:HintAssist.Foreground="White" >
                                                    <materialDesign:HintAssist.Hint>
                                                        <StackPanel
                                        Orientation="Horizontal"
                                        Margin="-2 0 0 0">
                                                            <materialDesign:PackIcon
                                            Kind="Coin" Margin="0 0 10 0" />
                                                            <TextBlock>
                                            Salary
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </materialDesign:HintAssist.Hint>
                                                </TextBox>

                                            </Grid>

                                            <Grid Grid.Row="5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <ToggleButton Grid.Column="0"
                                          Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                          Margin="10" VerticalAlignment="Center"
                                          IsChecked="False" HorizontalAlignment="Center" />

                                                <TextBox Grid.Column="1"  
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     VerticalAlignment="Center" Margin="5 0 10 0" materialDesign:HintAssist.Foreground="White" >
                                                    <materialDesign:HintAssist.Hint>
                                                        <StackPanel
                                        Orientation="Horizontal"
                                        Margin="-2 0 0 0">
                                                            <materialDesign:PackIcon
                                            Kind="ClockOutline" Margin="0 0 10 0"/>
                                                            <TextBlock>
                                            Working hours
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </materialDesign:HintAssist.Hint>
                                                </TextBox>

                                            </Grid>

                                            <Grid Grid.Row="6">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <ToggleButton Grid.Column="0"
                                                  Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                  Margin="10" VerticalAlignment="Center"
                                                  IsChecked="False" HorizontalAlignment="Center" />

                                                <TextBox Grid.Column="1"  
                                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                             VerticalAlignment="Center" Margin="5 0 10 0" materialDesign:HintAssist.Foreground="White" >
                                                    <materialDesign:HintAssist.Hint>
                                                        <StackPanel
                                                Orientation="Horizontal"
                                                Margin="-2 0 0 0">
                                                            <materialDesign:PackIcon
                                                    Kind="Calendars" Margin="0 0 10 0" />
                                                            <TextBlock>
                                                    Age
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </materialDesign:HintAssist.Hint>
                                                </TextBox>

                                            </Grid>

                                            <Separator Grid.Row="7"  VerticalAlignment="Top" Margin="10 10 10 0"></Separator>


                                            <Grid  Grid.Row="7">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                </Grid.RowDefinitions>

                                                <Grid Grid.Row="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                                    </Grid.ColumnDefinitions>

                                                    <CheckBox Grid.Column="0"
                                                  IsChecked="{x:Null}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10 0 0 0">
                                                        All
                                                    </CheckBox>

                                                    <CheckBox Grid.Column="1"
                                                  IsChecked="{x:Null}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10 0 0 0">
                                                        Most Rate
                                                    </CheckBox>

                                                </Grid>

                                                <StackPanel Grid.Row="1" >
                                                    <materialDesign:PackIcon   Kind="MenuSwapOutline"
                                        Height="25" Width="25" Padding="0" Margin="0"
                                        VerticalAlignment="Center" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" >
                                                        <materialDesign:PackIcon.RenderTransform>
                                                            <TransformGroup>
                                                                <ScaleTransform/>
                                                                <SkewTransform/>
                                                                <RotateTransform Angle="180"/>
                                                                <TranslateTransform/>
                                                            </TransformGroup>
                                                        </materialDesign:PackIcon.RenderTransform>
                                                    </materialDesign:PackIcon>
                                                    <Label Content="Scroll down-up"   VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
                                                </StackPanel>


                                            </Grid>


                                            <Grid Grid.Row="8">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="70"></RowDefinition>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <ToggleButton
                                        Content="×"
                                        Style="{StaticResource MaterialDesignActionAccentToggleButton}"
                                        IsChecked="False"
                                        ToolTip="Search by date" />
                                                <Viewbox Grid.Row="1"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

                                                    <Viewbox.Effect>
                                                        <DropShadowEffect BlurRadius="40" ShadowDepth="2"></DropShadowEffect>
                                                    </Viewbox.Effect>
                                                    <Calendar   IsEnabled="True"
                                            VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                                     />
                                                </Viewbox>
                                            </Grid>

                                        </Grid>



                                    </ScrollViewer>
                                </Grid>






                            </Grid>




                        </Grid>

                    </materialDesign:DialogHost>


                </Border>

              

                <materialDesign:TransitionerSlide TransitionOrigin="0.25, 0.75">
                    <materialDesign:TransitionerSlide.BackwardWipe>
                        <materialDesign:CircleWipe/>
                    </materialDesign:TransitionerSlide.BackwardWipe>

                    <Border   Background="#0097A7"  >


                        <materialDesign:Card BorderThickness="10"   VerticalAlignment="Center" HorizontalAlignment="Center"
                                 Background="White"  BorderBrush="#FFAB00"
                                 Width="400"
                                 Height="400"
                                 Padding="10"
                                 UniformCornerRadius="6">
                            <Border BorderBrush="#FFAB00" BorderThickness="2" CornerRadius="6" Padding="10">


                                <Grid >

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="40"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                        <RowDefinition Height="40"></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"  Text="Register Company" VerticalAlignment="Center" HorizontalAlignment="Center"
                                       Foreground="#FFAB00" FontWeight="Thin" Style="{StaticResource MaterialDesignHeadlineTextBlock}"/>



                                    <ComboBox Grid.Row="1" 
                                          Name="ComboBoxRegisterCompany"
                                          DisplayMemberPath="Name" SelectedValuePath="Id"
                                          materialDesign:HintAssist.Hint="Choose Company"
                                          IsEditable="True" Margin="5" FontSize="24"
                                          materialDesign:HintAssist.HintOpacity=".26">
                                    </ComboBox>

                                    <StackPanel  Grid.Row="2">
                                        <CheckBox
                                            x:Name="CheckBoxKey"
                                            IsChecked="False"
                                            Margin="0,0,0,8">
                                            had Key?
                                        </CheckBox>
                                        <PasswordBox Margin="5"
                                                     Style="{StaticResource MaterialDesignOutlinedPasswordFieldPasswordBox}"
                                                     VerticalAlignment="Top" 
                                                     IsEnabled="{Binding Path=IsChecked, ElementName=CheckBoxKey}"
                                                     materialDesign:HintAssist.Hint="PassKey" />
                                    </StackPanel>

                                    <StackPanel Grid.Row="3">
                                        <CheckBox
                                            x:Name="CheckBoxOther"
                                            IsChecked="False"
                                            Margin="0,0,0,8">
                                            Other Confirm!
                                        </CheckBox>
                                        <TextBox
                                            Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"
                                            Margin="5"
                                            VerticalAlignment="Top"
                                          
                                            AcceptsReturn="True"
                                            TextWrapping="Wrap"
                                            VerticalScrollBarVisibility="Auto"
                                            materialDesign:HintAssist.Hint="Write your Confirm"
                                            IsEnabled="{Binding Path=IsChecked, ElementName=CheckBoxOther}" />
                                    </StackPanel>

                                    <Button Grid.Row="4" Name="ButtonRegeste" 
                                        Style="{StaticResource MaterialDesignRaisedAccentButton}"
                                        Width="150"   Foreground="White" Click="ButtonRegeste_OnClick"
                                        Content="Regeste"
                                        materialDesign:RippleAssist.Feedback="#0097A7">


                                    </Button>

                                    <ToggleButton  Grid.Row="4" Name="ToggleBack"   Click="ToggleBack_OnClick"
                                        Style="{StaticResource MaterialDesignFlatToggleButton}"
                                        ToolTip="Back" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                                        <materialDesign:PackIcon
                                            Kind="ExitToApp"
                                            Height="21"
                                            Width="21" />
                                    </ToggleButton>


                                </Grid>
                            </Border>

                        </materialDesign:Card>



                    </Border>

                </materialDesign:TransitionerSlide>


                <materialDesign:TransitionerSlide >
                    <materialDesign:TransitionerSlide.ForwardWipe>
                        <materialDesign:SlideOutWipe/>
                    </materialDesign:TransitionerSlide.ForwardWipe>
                    <Border Background="Aqua">

                    </Border>
                </materialDesign:TransitionerSlide>

            </materialDesign:Transitioner>

        </Grid>

    </materialDesign:DialogHost>
</Window>


